<h1>Describe Your Item</h1>
<p>
 <span class="required"><abbr title="required">*</abbr></span> indicates required fields.
</p>
  <div class="col-sm-12 well" id="metadata-form">
    
      <%= simple_form_for [sufia, @batch, @form], html: { multipart: true }, builder: Sufia::FormBuilder do |f| %>
      <%= render 'metadata', f: f %>
   
 </div>
    <div class="well col-sm-12"> 
      <%= render 'add_to_collections', f: f, batch: @batch %>  
    </div>
      <div class="well col-sm-12" id="permission-form"> 
      <%= render 'generic_files/permission_form', f: f, batch: @batch %></div>
  </div>
  <div id="permissions_submit">
    <%= button_tag type: 'submit', class: 'btn btn-primary btn-lg',
        onclick: "confirmation_needed = false;", id: "upload_submit", name: "update_permission" do %>
      <i class="glyphicon glyphicon-floppy-disk"></i> Save
    <% end %>
  </div>

<% end %>
